.fd-hd {
    position: relative;
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    overflow: hidden;
}

.fd-hd:before {
    content: '';
    display: block;
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 600rpx;
    background-color: rgba(0, 0, 0, .6);
}

.fd-hd-bg {
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 600rpx;
    background-size: cover;
    background-position: center;
    filter: blur(30rpx);
}

.fd-cover {
    z-index: 2;
    width: 300rpx;
    height: 420rpx;
    margin-top: 80rpx;
    border-radius: 8rpx;
    box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, .3)
}

.fd-intro {
    z-index: 2;
    width: 320rpx;
    margin-top: 80rpx;
    margin-left: 40rpx;
    color: #fff;
}

.fd-title {
    margin-bottom: 30rpx;
    font-size: 42rpx;
}

.fd-intro-txt {
    margin-bottom: 18rpx;
    color: #eee;
}

.fd-data {
    display: flex;
    height: 150rpx;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #f4f4f4;
}

.fd-data-item {
    width: 33.33%;
    text-align: center;
}

.fd-data-item {
    border-left: 1px solid #eee;
}

.fd-data-item:first-child {
    border-left: none;
}

.fd-data-num {
    font-size: 40rpx;
    font-weight: 100;
    color: #444;
}

.fd-data-title {
    color: #999;
}

.fd-bd {
    padding: 0 20rpx 20rpx;
}

.fd-bd-title {
    padding-left: 20rpx;
    margin-top: 40rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
    border-left: 10rpx solid #47a86c;
}

.fd-bd-intro {
    text-align: justify;
    line-height: 1.5;
    color: #666;
}

.fd-bd-tag {
    display: flex;
}

.fd-bd-tag-item {
    padding: 5rpx 10rpx;
    margin-right: 15rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    color: #666;
}

.fd-bd-person {
    display: flex;
    width: 100%;
    height: 480rpx;
    overflow-x: scroll;
    overflow-y: hidden;
}

.fd-bd-person-item {
    margin-left: 20rpx;
    text-align: center;
}

.fd-bd-person-item:first-child {
    margin-left: 0;
}

.fd-bd-person-avatar {
    width: 280rpx;
    height: 350rpx;
}

.fd-bd-person-name {
    color: #666;

}

.fd-bd-person-role {
    color: #999
}

.pd-hd {
    position: relative;
    width: 100%;
    height: 600rpx;
    overflow: hidden;
}

.pd-hd-bg {
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 600rpx;
    background-repeat: no-repeat;
    background-position: center top;
    background-size: cover;
    filter: blur(15rpx);
}

.pd-hd:before {
    content: '';
    display: block;
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 600rpx;
    background-color: rgba(0, 0, 0, .6);
}

.pd-intro {
    position: absolute;
    z-index: 6;
    display: flex;
    width: 100%;
    height: 600rpx;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    color: #fff;
}

.pd-avatar {
    width: 280rpx;
    height: 280rpx;
    border-radius: 280rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    overflow: hidden;
    box-shadow: 0 0 160rpx rgba(255, 255, 255, .6);
}

.pd-name-cn {
    padding: 10rpx 20rpx;
    margin-top: 30rpx;
    background-color: rgba(0, 0, 0, .1);
    border-radius: 32rpx;
    font-size: 32rpx;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, .2) inset,1px 1px 0 rgba(255, 255, 255, .1);
}

.pd-name-en {
    margin-top: 10rpx;
    font-size: 24rpx;
}

.pd-address {
    margin-top: 20rpx;
    font-size: 24rpx;
}

.WxMasonryTitle {
    padding-left: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #444;
    border-left: 10rpx solid #47a86c;
}